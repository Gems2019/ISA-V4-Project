# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=backend_admin
DB_PASSWORD=backend_password
DB_NAME=auth_db

# Frontend Client Credentials (limited privileges for API queries)
DB_CLIENT_USER=frontend_client
DB_CLIENT_PASSWORD=your_secure_password_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS - Multiple origins separated by commas
CORS_ORIGINS=https://your-frontend.vercel.app,https://your-frontend.netlify.app

